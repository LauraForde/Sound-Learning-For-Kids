<Page
    x:Class="Sound_Learning_For_Kids.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Sound_Learning_For_Kids"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top" Text="Welcome" FontSize="40" FontWeight="Bold"></TextBlock>
        <TextBox PlaceholderText="Enter your name here" x:Name="nameText" HorizontalAlignment="Center" VerticalAlignment="Center" Width="350" TextChanged="TextBox_TextChanged"></TextBox>
        <Button HorizontalAlignment="Center" VerticalAlignment="Center" Content="Enter" Margin="0 100 0 0" Click="btn_click"></Button>
    </Grid>
</Page>
